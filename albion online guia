<script>
  let like = parseInt(localStorage.getItem('likeCount')) || 0;
  let dislike = parseInt(localStorage.getItem('dislikeCount')) || 0;
  let userVote = localStorage.getItem('userVote'); // "like", "dislike" o null

  // Mostrar los conteos actuales
  document.getElementById('likeCount').innerText = like;
  document.getElementById('dislikeCount').innerText = dislike;

  // Si ya vot√≥, deshabilitar botones para que no pueda votar de nuevo
  if(userVote) {
    document.getElementById('likeBtn').disabled = true;
    document.getElementById('dislikeBtn').disabled = true;
  }

  function vote(type) {
    if (userVote) {
      alert("Ya has votado. Gracias por tu opini√≥n.");
      return; // No permitir votar de nuevo
    }

    if (type === 'like') {
      like++;
      localStorage.setItem('likeCount', like);
      document.getElementById('likeCount').innerText = like;
      userVote = 'like';
    } else {
      dislike++;
      localStorage.setItem('dislikeCount', dislike);
      document.getElementById('dislikeCount').innerText = dislike;
      userVote = 'dislike';
    }

    localStorage.setItem('userVote', userVote);

    // Deshabilitar botones despu√©s de votar
    document.getElementById('likeBtn').disabled = true;
    document.getElementById('dislikeBtn').disabled = true;
  }
</script>

